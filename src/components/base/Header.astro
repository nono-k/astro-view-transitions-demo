---
import { headerLink } from "@/config";
const base = import.meta.env.BASE_URL;
---

<header class="header">
  <a href={base} class="header__logo">Logo</a>
  <nav class="header__nav">
    <ul class="header__list">
      {headerLink.map(link => (
        <li>
          <a href={link.url}>{link.name}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style lang="scss">
  .header {
    grid-column: 1 / -1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    &__logo {
      font-size: 1.5rem;
      font-weight: bold;
    }
    &__list {
      display: flex;
      gap: 1.5rem;
    }
  }
</style>